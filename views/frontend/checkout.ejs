    <script>
        const okButton = document.getElementById("okBtn");
        const closeButton = document.querySelector('#profilealertmodal .close');
        closeButton.addEventListener('click', closeModal);
        const errorMessage = document.getElementById('profilealertmodal');
        const grandTotal = document.getElementById('grandTotal');
        const paymentMethods = document.getElementsByName('payment-method');





        function showModal(message) {

            okButton.style.display = 'block'
            okButton.addEventListener('click', function () {
                var addressSelected = document.querySelector('input[name="addressRadio"]:checked');
                console.log("message", message,addressSelected)
                if (addressSelected === null) {
                    console.log("addressSelected")

                    closeModal();
                }
                else if (message === 'To place Order using  Cash On Delivery,Total amount should be less than 1000' || message==='No payment method selected..! Please select a method and proceed..!' || message==='You have no enough money in your wallet for this purchase') {
                    console.log("second if else")

                    closeModal();
                }
                // else if(message==='your order is successfully placed,you will get notified soon'){
                //     console.log("third if else")

                //     window.location.href = '/profile';
                // }
               
                else {
                    console.log("fourth ")
                    
                    window.location.href = '/profile';
                }
            })
            const modalMessage = document.getElementById('modal-message-profile');
            modalMessage.textContent = message;
            errorMessage.style.display = 'block';
        }

        function closeModal() {
            errorMessage.style.display = 'none';

        }

        function validateAddressSelection(subtotalamount, coupondiscount, offerdiscount) {
            var addressSelected = document.querySelector('input[name="addressRadio"]:checked');
            if (addressSelected === null) {
                showModal('Please select an address before proceeding to checkout.');
            } 
           
             else {
                let checkedcount=0;
                for (const paymentMethod of paymentMethods) {
                    if (paymentMethod.checked) {
                        checkedcount++;
                        const selectedMethod = paymentMethod.value;
                        var selectedAddressIndex = addressSelected.value;
                        let totalamount = parseFloat(grandTotal.textContent.replace('$', ''));
                        console.log("totalamount", totalamount)

                        if (selectedMethod === 'cash-on-delivery') {
                            if (totalamount >= 1000) {
                                showModal('To place Order using  Cash On Delivery,Total amount should be less than 1000');

                            }
                            else {
                                fetch('/cart/placeorder', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({ addressIndex: selectedAddressIndex, totalamount: totalamount, coupondiscount, offerdiscount })
                                })
                                    .then(response => response.json())
                                    .then(data => {
                                        showModal('your order is successfully placed,you will get notified soon')
                                        console.log(data);
                                    })
                                    .catch(error => {
                                        console.error('Error:', error);
                                    });
                            }
                        }
                        else if (selectedMethod === 'stripe') {
                            // Handle Stripe payment
                            console.log("card payment")
                            fetch('/cart/checkout/cardpayment', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    addressIndex: selectedAddressIndex, totalamount: totalamount, coupondiscount, offerdiscount
                                })
                            }).then(response => {
                                console.log("card payment response")

                                if (response.ok)
                                    return response.json()//.then(json=>Promise.reject(json))
                            }).then(({ url }) => {
                                console.log("card payment responseurl", url)

                                window.location = url
                            }).catch(e => {
                                console.log("error", e)
                            })


                        }
                        else if (selectedMethod === 'wallet') {
                            Swal.fire({
                                title: 'Confirm Wallet Payment',
                                text: `You are about to pay ${totalamount-coupondiscount-offerdiscount} from your wallet. Do you want to proceed?`,
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes, Pay from Wallet'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    console.log('you are in placeorder',selectedAddressIndex,totalamount,coupondiscount,offerdiscount)
                                    // Handle Wallet payment
                                    fetch('/cart/checkout/walletpayment', {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify({ addressIndex: selectedAddressIndex, totalamount: totalamount, coupondiscount, offerdiscount })
                                    })
                                        .then(response => response.json())
                                        .then(data => {
                                            if(data.isSuccess){
                                                showModal('your order is successfully placed,you will get notified soon')
                                            }
                                            else{
                                                showModal('You have no enough money in your wallet for this purchase')

                                            }
                                          
                                            console.log(data);
                                        })
                                        .catch(e => {
                                            console.log("error", e);
                                            Swal.fire(
                                                'Error',
                                                'There was an error processing your wallet payment. Please try again.',
                                                'error'
                                            );
                                        });
                                }
                            });
                        }


                        break;
                    }

                }
                 if(checkedcount==0){
                showModal('No payment method selected..! Please select a method and proceed..!');

             } 
            }

        }



        function verifyCoupon(event, totalamount) {
            event.preventDefault();
            //const coupon = document.querySelector('#couponForm input[type="text"]').value;
            const coupon = document.getElementById('inputcouponForm').value
            console.log("in verifyCoupon ")

            console.log("totalamount ", totalamount)



            // Get the table body element
            const tableBody = document.getElementById('table-body');

            // Send a request to your server-side API to verify the coupon
            fetch('/cart/checkout/verifycoupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ coupon, totalamount }),
            })
                .then((response) => response.json())
                .then(async (data) => {
                    if (data.valid) {
                        await Swal.fire({
                            title: 'Coupon Shared!',
                            text: `The coupon code verified successfully.`,
                            icon: 'success',
                            confirmButtonText: 'OK'
                        });


                        window.location.reload();

                    } else {

                        await Swal.fire({
                            title: 'Failed!',
                            text: data.message,
                            icon: 'failure',
                            confirmButtonText: 'OK'
                        });
                    }
                })
                .catch((error) => {
                    console.error(error);
                    alert('Error verifying coupon', error.message);
                });
        }




        function removeCoupon() {
            event.preventDefault();
            fetch('/cart/checkout/removecoupon', {
                method: 'GET',
                headers: {
                    contentType: 'application/json',
                },

            }).then((response) => response.json())
                .then(async (data) => {
                    await Swal.fire({
                        title: 'Coupon Removed!',
                        text: `The coupon removed successfully.`,
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });
                    window.location.reload();

                })

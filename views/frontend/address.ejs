        function validateForm() {
    // Get form elements
    const house = document.getElementById('house');
    const street = document.getElementById('street');
    const city = document.getElementById('city');
    const state = document.getElementById('state');
    const zipcode = document.getElementById('zipcode');
    const phone = document.getElementById('phone');
    
    let isValid = true;

    // Regular expression for characters, numbers, and spaces
    const charRegex = /^[^\w\d]*$/;

    // Reset previous validation
    [house, street, city, state, zipcode, phone].forEach(input => {
        input.classList.remove('is-invalid');
    });

    // Validate fields are not empty and contain only characters, numbers, and spaces
    if (charRegex.test(house.value.trim())) {
        house.classList.add('is-invalid');
        isValid = false;
    }
    if (charRegex.test(street.value.trim())) {
        street.classList.add('is-invalid');
        isValid = false;
    }
    if (charRegex.test(city.value.trim())) {
        city.classList.add('is-invalid');
        isValid = false;
    }
    if (charRegex.test(state.value.trim())) {
        state.classList.add('is-invalid');
        isValid = false;
    }

    // Validate zipcode is numeric and 5 digits long
    if (!/^\d{5}$/.test(zipcode.value.trim())) {
        zipcode.classList.add('is-invalid');
        isValid = false;
    }

    // Validate phone number (example: 10 digits)
    if (!/^\d{10}$/.test(phone.value.trim())) {
        phone.classList.add('is-invalid');
        isValid = false;
    }

    // Prevent form submission if any field is invalid
    return isValid;
}

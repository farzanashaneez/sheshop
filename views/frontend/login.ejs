        function validateSignupForm() {
            const form = document.getElementById('signupForm');
            const username = document.getElementById('username');
            const email = document.getElementById('reguseremail');
            const password = document.getElementById('register-password');



            let isValid = true;
            const nameError = document.getElementById('nameError');
            const emailError = document.getElementById('emailError');
            const passwordError = document.getElementById('passwordError');



            // Clear previous validation states
            form.classList.remove('was-validated');
            username.classList.remove('is-invalid');
            email.classList.remove('is-invalid');
            password.classList.remove('is-invalid');

            emailError.textContent = '';
            nameError.textContent = '';
            passwordError.textContent = '';


            // Validate username
            if (username.value.trim() === '') {
                username.classList.add('is-invalid');
                nameError.textContent = 'Name is required';
                isValid = false;
            } else {
                username.classList.remove('is-invalid');
                username.classList.add('is-valid');
            }

            // Validate email
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(email.value)) {
                email.classList.add('is-invalid');
                document.getElementById('emailError').textContent = 'Enter a valid email';

                isValid = false;
            } else {
                email.classList.remove('is-invalid');
                email.classList.add('is-valid');
            }

            // Validate password
            if (password.value.trim() === '') {
                password.classList.add('is-invalid');
                passwordError.textContent = 'Password is required';
                isValid = false;
            }
            else {
                const passwordPattern = /^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{6,}$/;
                if (!passwordPattern.test(password.value)) {
                    password.classList.add('is-invalid');
                    passwordError.textContent = 'Password must be at least 6 characters long and contain at least one letter and one number.';
                    isValid = false;
                } else {
                    password.classList.remove('is-invalid');
                    password.classList.add('is-valid');
                    //password.nextElementSibling.innerText = '';
                }
            }

            // Add the 'was-validated' class to the form to trigger Bootstrap's validation styles
            form.classList.add('was-validated');


            return isValid;
        }

        function sendOTP() {

            const email = document.getElementById('reguseremail').value;

            const API_BASE_URL = `${window.location.protocol}//${window.location.hostname}:${window.location.port}`;

            fetch(`${API_BASE_URL}/otp/sentotp`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email: email })
            })

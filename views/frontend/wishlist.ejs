   <script>
            const errorMessage = document.getElementById('alertmodal');

    function addOrRemovewishlist(action, id,name) {
            console.log("id",id)
            fetch(`/products/wishlist/${action}/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    return response.json();
                })
                .then(data => {
                    if(data.islogged){
                        showModal(name+" removed from wishlist")

                   // window.location.reload();
                }
                else{
                    showModal(data.message)

                }
                })
                .catch(error => {
                    console.error('Error updating wishlist:', error);
                });
        }

        function addToCart(productId) {
           // var quantity = document.getElementById('qty').value;
            console.log("productId", productId)
            fetch(`/products/cart/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId, quantity: 1 })
            })
                .then(response => response.json())
                .then(data => {
                    console.log("data.message", data)
                    addOrRemovewishlist('remove', productId)
                    //showModal(data.message)
                     window.location.reload();
                })
                .catch(error => {
                    //showModal(error)
                });
        }
        function showModal(message) {
            console.log('error msg', errorMessage)
            const modalMessage = document.getElementById('modal-message');
            modalMessage.textContent = message;
            errorMessage.style.display = 'block';
        }

        function closeModal() {
            errorMessage.style.display = 'none';
            window.location.reload();

        }
    
   </script>

        function addOrRemovewishlist(action, id) {
            console.log("id",id)
            fetch(`/products/wishlist/${action}/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    return response.json();
                })
                .then(data => {
                    if(data.islogged){
                        showModal(data.message)

                    window.location.reload();
                }
                else{
                    showModal(data.message)

                }
                })
                .catch(error => {
                    console.error('Error updating wishlist:', error);
                });
        }

        function addToCart(productId) {
            var quantity = document.getElementById('qty').value;
            console.log("quantity", quantity)
            fetch(`/products/cart/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId, quantity: quantity })
            })
                .then(response => response.json())
                .then(data => {
                    console.log("data.message", data)
                    showModal(data.message)
                    // window.location.reload();
                })
                .catch(error => {
                    showModal(error)
                });
        }
       
        const closeButton = document.querySelector('#profilealertmodal .close');
        closeButton.addEventListener('click', closeModal);
        const errorMessage = document.getElementById('profilealertmodal');

        function showModal(message, isremove) {
            const modalMessage = document.getElementById('modal-message-profile');
            modalMessage.textContent = message;
            errorMessage.style.display = 'block';
        }

        function closeModal() {
            errorMessage.style.display = 'none';
            window.location.reload();
        }

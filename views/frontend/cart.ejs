    <script>
        const errorMessage = document.getElementById('alertmodal');
        const inputFields = document.querySelectorAll('.productquantity');

inputFields.forEach((input) => {
    input.addEventListener('input', (e) => {
        const currentValue = parseInt(e.target.value, 10);
        const maxCount = parseInt(e.target.max, 10);
        const productId = e.target.dataset.productId;
        const countSpan = e.target.parentNode.querySelector('.span-left');
        const priceElement = e.target.closest('tr').querySelector('.price');
        const totalpriceElement = e.target.closest('tr').querySelector('.totalprice');

        const unitPrice = parseFloat(priceElement.dataset.unitprice);
        const newTotalPrice = (unitPrice * currentValue).toFixed(2);
        totalpriceElement.textContent = `$${newTotalPrice}`;
        console.log("priceElement",priceElement,totalpriceElement,unitPrice,newTotalPrice)


        const newCount = maxCount - currentValue;
        console.log("newCount = maxCount - currentValue",newCount,maxCount,currentValue)
        if (countSpan === null || countSpan === undefined) {
            console.error('countSpan is null or undefined');
            updateOverallTotal();
            return;
        }
        if(newCount===0){
            countSpan.textContent = `No more items left`;

        }
        else{
        countSpan.textContent = `${newCount} more left..`;
        }
       
        
        updateOverallTotal();

    });
});
function updateOverallTotal() {
    let overallTotal = 0;
    document.querySelectorAll('.totalprice').forEach((totalCol) => {
        const totalPrice = parseFloat(totalCol.textContent.replace('$', ''));
        overallTotal += totalPrice;
    });
    document.querySelector('#overall-total').textContent = `$${overallTotal.toFixed(2)}`;
   const shipping= document.querySelector('#shipping')
  const aftershipping=parseFloat(shipping.textContent.replace('$', ''))+overallTotal;

    document.querySelector('#totalwithshipping').textContent = `$${aftershipping.toFixed(2)}`;
}

        function removeProduct(productId) {
            // Send an AJAX request to remove the product
            fetch('/cart/removeProduct', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId })
            })
                .then(response => {
                    if (response.ok) {
                        console.log(response);
                        location.reload();
                    } else {
                        console.error('Failed to remove product');
                    }
                })
                .catch(error => {
                    console.error('Error removing product:', error);
                });
        }

        function updateCart() {
            const updatedCart = [];
            console.log("in update cart")

            document.querySelectorAll('.cart-product-quantity input').forEach(input => {
                if (typeof input.dataset.productId !== 'undefined' && input.value) {
                    updatedCart.push({
                        productid: input.dataset.productId,
                        quantity: input.value
                    });
                }
            });
            // Send an AJAX request to remove the product
            fetch('/cart/update', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ updatedCart: updatedCart })
            })
                .then(response => {
                    if (response.ok) {
                        console.log(response);
                        showModal("Cart updated successfully..!")

                    } else {
                        console.error('Failed to update product');
                    }
                })
                .catch(error => {
                    console.error('Error updating product:', error);
                });
        }


    <script>

         const closeButton = document.querySelector('#profilealertmodal .close');
        //closeButton.addEventListener('click', closeModal);
        const errorMessage = document.getElementById('profilealertmodal');

        function showModal(message, orderid) {
            const modalMessage = document.getElementById('modal-message-profile');
        if(message==='accept'){
            modalMessage.textContent = "Do you want to accept Order";
            document.getElementById('okBtn').addEventListener('click',function(){
                acceptOrder(orderid)
            })


        }else if(message==='reject'){
            modalMessage.textContent = "Do you want to reject Order";
            document.getElementById('okBtn').addEventListener('click',function(){
                rejectOrder(orderid)
            })

        }
        else if(message==='recieve'){
            modalMessage.textContent = "Do you want to recieve Order";
            document.getElementById('okBtn').addEventListener('click',function(){
                markReceived(orderid)
            })

        }
        else if(message==='cancel'){
            modalMessage.textContent = "Do you want to cancel Order";
            document.getElementById('okBtn').addEventListener('click',function(){
                cancelOrder(orderid)
            })

        }

            errorMessage.style.display = 'block';
        }

        function closeModal() {
            errorMessage.style.display = 'none';
        }
       


        function acceptOrder(orderId) {
            fetch(`/admin/orders/shipping/${orderId}`, {
        method: 'GET',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        // Handle the response from the server
    window.location.reload();        // Refresh the order list or update the UI as needed
    })
    .catch(error => {
       console.log(error)
    });
        }

        function rejectOrder(orderId) {
            fetch(`/admin/orders/cancelled/${orderId}`, {
        method: 'GET',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
